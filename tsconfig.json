{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["node", "jest"],
    "rootDir": ".",
    "outDir": "build",
    "target": "ES2022",
    "importHelpers": true,
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "jest.config.js"
  ]
}
